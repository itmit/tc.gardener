<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gardener.Views.ListView.ListSalePage"
             Title="Выбор действия">
    <ContentPage.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderColor" Value="#f68b1f"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HeightRequest" Value="60"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="WidthRequest" Value="250"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Аренда помещения" Style="{StaticResource ButtonStyle}" Command="{Binding OpenPageCommand}" x:Name="RentButton" />
            <Button Text="Продажа помещения" Style="{StaticResource ButtonStyle}" Command="{Binding OpenPageCommand}" x:Name="SellButton" />
            <Button Text="Покупка помещения" Style="{StaticResource ButtonStyle}" Command="{Binding OpenPageCommand}" x:Name="BuyButton" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>