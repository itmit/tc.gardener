<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gardener.Views.Rent.ListSale">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Аренда помещения" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_rent"></Button>
            <Button Text="Продажа помещения" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_sale"></Button>
            <Button Text="Купить помещение" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_buy"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>