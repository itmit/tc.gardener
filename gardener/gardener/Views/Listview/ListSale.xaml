<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gardener.Views.Rent.ListSale"
             Title="Страница 2">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Аренда помещения" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="CenterAndExpand" VerticalOptions="Center" HeightRequest="60" 
                    BorderRadius="15" BackgroundColor="Transparent"  Clicked="Button_rent">
            </Button>
            <Button Text="Продажа помещения" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="CenterAndExpand" VerticalOptions="Center" HeightRequest="60" 
                    BorderRadius="15" BackgroundColor="Transparent" Clicked="Button_sale">
            </Button>
            <Button Text="Купить помещение" FontSize="Medium" BorderWidth="1" Margin="5" BorderColor="#f68b1f"
                    HorizontalOptions="CenterAndExpand" VerticalOptions="Center" HeightRequest="60"
                    BorderRadius="15" BackgroundColor="Transparent" Clicked="Button_buy">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>