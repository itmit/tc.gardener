<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gardener.Views.RentSalePage"
             xmlns:blocksViews="clr-namespace:gardener.Views.BlocksViews;">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Source="pict_6.png" />
                <ListView ItemsSource="{Binding Blocks}" RowHeight="100" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <blocksViews:BlockViewCell />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>